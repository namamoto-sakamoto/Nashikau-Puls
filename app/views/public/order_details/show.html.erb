<h4>注文詳細</h4>
<div class="row">
  <div class="col-10 offset-1">
    <table class="table table-borderd">
      <thead class="table-secondary">
        <tr>
          <th>品種</th>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>合計金額</th>
        </tr>
      </thead>
      <tbody>
        <% @total = 0 %>
        <% @order_details.each do |order_details| %>
        <tr>
          <td>
            <%= order_details.product_type.jpear.name %>
          </td>
          <td>
            <%= order_details.product_type.item_name %>
          </td>  
          <td>
            <%= order_details.product_type.tax_price.to_s(:delimited) %>
          </td>
          <td>
            <%= order_details.total %>
          </td>
          <td>
            <%= order_details.subtotal.to_s(:delimited) %>
          </td>
        </tr>
        <% @total += order_details.subtotal %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-5 offset-1">
    <table class="table table-bordered mt-4">
      <tbody>
        <th>合計</th>
        <td><%= @total %></td>
      </tbody>
    </table>
  </div>
</div>  
<div class="active mt-5">
 <div class="btn btn-outline-info ml-3">
  <%= link_to public_order_path(@order_details) do %>
    <i class="fa-solid fa-arrow-rotate-left"></i>
    一覧へ戻る
  <% end %>
</div>