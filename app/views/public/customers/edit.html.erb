<h4><%= @customer.full_name %>様の顧客情報編集</h4>

<%= form_with model:@customer, url: public_customer_path, local:true do |f| %>
  <table class="table table-borderless">
    <tr>
      <td><%= f.label :last_name, "氏名（姓）" %></td>
      <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <td><%= f.label :first_name, "氏名（名）" %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td><%= f.label :last_name_kana, "氏名（セイ）" %></td>
      <td><%= f.text_field :last_name_kana %></td>
    </tr>
    <tr>
      <td><%= f.label :first_name_kana, "氏名（メイ）" %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td><%= f.label :postcode, "郵便番号" %></td>
      <td><%= f.text_field :postcode %></td>
    </tr>
    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><%= f.label :phone_number, "連絡先電話番号" %></td>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <td><%= f.label :memo, "メモ" %></td>
      <td><%= f.text_field :memo %></td>
    </tr>
  </table>
  <div class="btn btn-outline-info ml-3">
    <%= link_to public_customer_path(@customer) do %>
      <i class="fa-solid fa-arrow-rotate-left"></i>
      顧客情報へ戻る
    <% end %>
  </div>  
   <%= f.button :type => "submit", class: 'btn btn-success ml-3' do %>
    <div><i class="fa-solid fa-user-plus"></i> 変更を保存 </div>
  <% end %>
<% end %>