<h4>品種新規登録</h4>
<table class="table table-borderless">
  <%= form_with model:@jpear, url: public_jpears_path, method: :post, local:true do |f| %>
  <tr>
    <td><%= f.label :image, "梨画像" %></td>
    <td><%= f.file_field :image %></td>
  </tr>  
  <tr>
    <td><%= f.label :name, "品種名" %></td>
    <td><%= f.text_field :name, autofocus: true %></td>
  </tr>
  <tr>
    <td><%= f.label :stutes, "販売状況" %></td>
    <td>
      <%= f.radio_button :is_active, true %>
    	<%= f.label :is_active, "販売停止中", class: "text-active" %>
    	<%= f.radio_button :is_active, false %>
    	<%= f.label :is_active, "販売中", class: "text-invalid" %>
    </td>
  </tr>
  <td>
    <%= f.submit '品種新規登録', class: "btn btn-warning" %>
  </td>
  <% end %>
</table>
