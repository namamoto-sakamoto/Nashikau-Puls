<h4>編集</h4>
<%= form_with model:@delivery, url: public_delivery_path, method: :patch, local:true do |f| %>
  <table class="table table-borderless">
    <tr>
      <td><%= f.label :name, "氏名" %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :name_kana, "氏名（フリガナ）" %></td>
      <td><%= f.text_field :name_kana %></td>
    </tr>
    <tr>
      <td><%= f.label :postcode, "郵便番号" %></td>
      <td><%= f.text_field :postcode %></td>
    </tr>
    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><%= f.label :phone_number, "連絡先電話番号" %></td>
      <td><%= f.text_field :phone_number %></td>
    </tr>
  </table>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>
