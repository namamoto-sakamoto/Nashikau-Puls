<h2>ログイン</h2>
  <% if flash[:danger] %>
    <p class="text-red"><%= flash[:danger] %></p>
  <% end %>
  
  <%= form_with(model: @farmer, url: session_path(resource_name)) do |f| %>  
  <div class="field">
    <%= f.label :"メールアドレス" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"次回から自動的にログインする" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

  <h2 class="section-ttl">登録がお済みでない方</h2>
  <p><%= link_to "こちら", new_farmer_registration_path, class: "underline" %>から新規登録を行なってください。</p>
</section>

