<h4>登録農園一覧</h4>
<div class="row">
  <div class="col-10 offset-1">
    <table class='table table-hover mt-5'>
      <thead class="thead-light">
        <tr>
          <th>農園ID</th>
          <th>農園名</th>
          <th>代表者氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
      </tr>
      </thead>
      <tbody>
        <% @farmers.each do |farmer| %>
          <tr>
            <td><%= farmer.id %></td>
            <td>
              <%=  link_to admin_farmer_path(farmer.id) do %>
                <%= farmer.farmer_name %>
              <% end %>
            </td>
            <td><%= farmer.name %></td>
            <td><%= farmer.email %></td>
            <td>
              <% if farmer.is_deleted == true %>
                <p>退会済</p>
              <% else %>
                <p>有効</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </div>
    </table>
  </div>
</div>  