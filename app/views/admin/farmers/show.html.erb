<h4>登録農家詳細</h4>
<div class="row">
  <div class="col-8 offset-1">
    <table class='table table-hover mt-5'>
      <tbody>
        <tr>
          <th>農園名</th>
          <td><%= @farmer.farmer_name %></td>
        </tr>
        <tr>
          <th>代表者氏名</th>
          <td><%= @farmer.name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @farmer.name_kana %></td>
        </tr>
        <tr>
          <th>連絡先電話番号</th>
          <td><%= @farmer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @farmer.email %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @farmer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @farmer.address %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="btn btn-outline-info ml-3">
  <%= link_to admin_farmers_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i>
    一覧へ戻る
  <% end %>
</div>
          